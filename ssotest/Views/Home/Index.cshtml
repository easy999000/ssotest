@using ssoCommon;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h3>
        当前登入账号:@(AnalogData.GetAnalogData(AnalogDataEnum.LoginUser)
        .GetData<UserInfo>(this.Context.Request.Cookies["logintoken"])?.Name)
    </h3>
    <div>
        客户端站点:
        @{
            foreach (var item in ConfigOption.DefaultConfig.ClientDomain)
            {
                <text>
                    <div><a target="_blank" href="@item">@item</a></div>
                </text>
            }

        }

    </div>
    <p></p>
    <div>
        <p>本示例使用内网临时域名,需要配置本地hosts文件域名才会生效,添加如下配置</p>
        <pre style="text-align:left">
